# Use neovim for vim if present.
command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d"

# Verbosity 
	alias \
		cp="cp -v" \
		mv="mv -v" \
		rm="rm -v" \
		rr="rm -r -v"
		
		alias mk="mkdir -pv" 
		alias tch="touch"

## Colorize commands when possible.
	alias \
		ls="ls --color=auto" \
		grep="grep --color=auto" \
		diff="diff --color=auto" \
	 	lx="exa" \
	 	lnc="l --color=none" \
	 	l="ls -lh" \
	 	la="ls -a" \ 
	 	lg="ls --group-directories-first" \
	 	lga="ls --group-directories-first --all"

## Shell config
	alias \
		czsh="cat /home/soimuen/.zshrc" \
		nzsh="nvim /home/soimuen/.zshrc" \
		szsh="source /home/soimuen/.zshrc"

## Common commands
	alias \
		ps="ps -u" \
		za="zathura" \
		pk="pkill" \
		n="nvim" \
		v="vim" \
		tm="tmux" \
		mp="mocp"

## Web browsing
	alias \
		chrome="google-chrome-stable&" \
		f="firefox&" \
		viv="vivaldi-stable&" \
		qu="qutebrowser&" \
		thd="thunderbird&" 

## System managements
	alias by="acpi -b"
	alias cl="calcurse" 
	alias nmt="neomutt" 
	alias gg="getent group" 
	alias off="shutdown -P now" 
	alias pm="sudo pacman -Syu" 
	alias pavu="pavucontrol" 
	alias tp="htop" 

## Git
	alias \
		gi="git init" \
		gcl="git clone" \
		ga="git add" \
		gc="git commit -m" \
		gcv="git commit --verbose" \
		glo="git log" \
		glg="git log --graph" \
		gls="git log --stat" \
		gd="git diff" \
		gs="git status" \
		gsta="git stash" \
		gpl="git pull" \
		gpsh="git push" \ 

		alias gch="git checkout"
		alias gchb="git checkout -b" 
		alias gm="git merge"
		alias gb="git branch" 
